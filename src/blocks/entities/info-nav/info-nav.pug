-
  const infoNav = [
    pages.pageShop,
    pages.pageDelivery,
    pages.pageReturnPolicy,
    pages.pagePayment,
    pages.pageDimensions,
    pages.pageFAQ,
    pages.pageContact,
  ]

mixin info-nav
  aside.info-nav&attributes(attributes)
    h2.info-nav__title Клиентам
    ul.info-nav__list
      each item in infoNav
        li.info-nav__item
          a.info-nav__link(href=item.href)=item.text
