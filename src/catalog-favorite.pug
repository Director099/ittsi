extends pug/layout.pug

block meta
  title= pages.catalogFavorite.text
block header
  +page-header()
block content
  +page-catalog({
    title: pages.catalogFavorite.text,
    hiddenBlock: true
  })
    each item, i in Array.from({length: 5})
      +preview({
        img: i + 1,
        hasColors: true,
        priceSale:'5 768',
        title: "Платье из 100% хлопка",
        btnFavoriteActive: true,
        btnFavoriteCount: i === 2 ? 124 : 123
      })

  +block-products({
    title: 'Ранее просматривали',
  })
    .block-products__list.grid-tpl-lg-5
      each item, i in Array.from({length: 5})
        +preview({
          img: i + 1,
          hasColors: i + 1 === 2,
          priceSale: i + 1 !== 2 ? "" : '5 768',
          title: "Платье из 100% хлопка",
          btnFavoriteActive: i === 2,
          btnFavoriteCount: i === 2 ? 124 : 123
        }).block-products__preview
block footer
  +page-footer()
